{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
    "no-console": ["error", { "allow": ["warn", "error", "log"] }],
    "class-methods-use-this": 0,
    "consistent-return": 0,
    "no-return-assign": 0,
    "no-param-reassign": 0,
    "linebreak-style": 0,
    "no-use-before-define": ["error", { "functions": false, "classes": true }]
  },
  "plugins": ["prettier"]
}